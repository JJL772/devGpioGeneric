record(bo, "$(P)GPIO$(N)_OUT")
{
    field(DTYP, "devGpio")
    field(OUT, "@$(CHIP),$(N)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
}

record(bi, "$(P)GPIO$(N)_IN")
{
    field(DTYP, "devGpio")
    field(INP, "@$(CHIP),$(N)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
    field(SCAN, ".1 second")
}

record(mbbo, "$(P)GPIO$(N)_POLARITY")
{
    field(DTYP, "devGpioCfg")
